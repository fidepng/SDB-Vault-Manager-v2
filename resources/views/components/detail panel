<div
    class="flex-shrink-0 flex flex-col bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden backdrop-blur-sm max-h-full"
    :class="selectedSdb ? 'opacity-100' : 'opacity-60'"
    x-transition:all.300ms
    x-data="{
        visitModalOpen: false,
        historyModalOpen: false,
        historyTab: 'sewa',
        historyData: { rental_histories: [], visits: [] },
        isLoadingHistory: false,
    
        // Form Data Kunjungan
        visitForm: {
            nama_pengunjung: '',
            keterangan: '',
            waktu_kunjung: ''
        },
    
        // Buka Modal Kunjungan
        openVisitModal() {
            this.visitForm.nama_pengunjung = this.selectedSdb.nama_nasabah;
            const now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            this.visitForm.waktu_kunjung = now.toISOString().slice(0, 16);
            this.visitModalOpen = true;
        },
    
        // Ambil Data History via Fetch API
        async openHistoryModal() {
            this.historyModalOpen = true;
            this.isLoadingHistory = true;
            this.historyData = { rental_histories: [], visits: [] }; // Reset
    
            try {
                // Panggil route yang kita buat di Fase 2.1
                const response = await fetch(`/sdb/${this.selectedSdb.id}/history`);
                this.historyData = await response.json();
            } catch (error) {
                console.error('Gagal memuat history:', error);
                alert('Gagal mengambil data history.');
            } finally {
                this.isLoadingHistory = false;
            }
        },
    
        formatDateTime(dateString) {
            if (!dateString) return '-';
            const date = new Date(dateString);
            return new Intl.DateTimeFormat('id-ID', {
                dateStyle: 'medium',
                timeStyle: 'short'
            }).format(date);
        }
    }"
>
